<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhmd.eeluproject.Activites.Edit_Profile"
    android:orientation="vertical"
    android:background="@drawable/mainback2"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#67B3C1"
        android:minHeight="@dimen/abc_action_bar_default_height_material">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Profile"
            android:id="@+id/tollbartext"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:textSize="30sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:layout_gravity="center"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:src="@drawable/teama"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="Edit Photo"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_margin="10dp">

           <TextView
               android:layout_width="90dp"
               android:layout_height="match_parent"
               android:background="@drawable/accountedittext"
               android:layout_marginRight="5dp"
               android:layout_weight="1"
               android:text="username"
               android:gravity="center"
               android:textSize="18sp"
               android:textColor="#000"/>

           <EditText
               android:layout_width="280dp"
               android:layout_height="match_parent"
               android:padding="7dp"
               android:textSize="20sp"
               android:layout_gravity="center"
               android:background="@drawable/accountedittext"
               android:layout_weight="1"
               />

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/accountedittext"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="email"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/accountedittext"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/accountedittext"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="phone"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/accountedittext"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/accountedittext"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="age"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:background="@drawable/accountedittext"
                android:layout_weight="1"
                />

        </LinearLayout>



        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/bluebutton"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="update"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:id="@+id/update_edit"
            />


    </LinearLayout>


</LinearLayout>
