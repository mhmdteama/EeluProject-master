<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.mhmd.eeluproject.Activites.Home"
    android:gravity="center">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="7dp"
            android:layout_gravity="center"
            android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardElevation="10dp"
                    android:elevation="10dp"
                    android:layout_marginRight="5dp"
                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/calendar"
                        android:id="@+id/to_calender"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardElevation="10dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="3dp"
                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/phone_reminder"
                        android:id="@+id/to_calls"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardElevation="10dp"
                    android:elevation="10dp"
                    android:layout_marginRight="5dp"
                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/treatment_times"
                        android:id="@+id/to_alarm"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardElevation="10dp"
                    android:elevation="10dp"
                    android:layout_marginLeft="3dp"

                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/location2"
                        android:id="@+id/to_address"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>



